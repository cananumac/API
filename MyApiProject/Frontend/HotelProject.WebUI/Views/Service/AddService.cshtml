@model CreateServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Hizmet İkonu</label>
    <input type="text" asp-for="ServiceIcon" class="form-control mb-2" />
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>

    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control mb-2" />
     <span asp-validation-for="Title" class="text-danger"></span>


    <label>Hizmet Açıklaması</label>
    <input type="text" asp-for="Description" class="form-control mb-2" />
    <span asp-validation-for="Description" class="text-danger"></span>


    <button class="btn btn-rounded btn-primary">Hizmet Ekle</button>
</form>


