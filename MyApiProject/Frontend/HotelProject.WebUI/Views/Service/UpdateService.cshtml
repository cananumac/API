@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden"  asp-for="ServiceId"/>
   <label>Hizmet İkonu</label>
    <input type="text" asp-for="ServiceIcon" class="form-control mb-2" />
    <span asp-validation-for="ServiceIcon" class="text-info"></span>

    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control mb-2" />
     <span asp-validation-for="Title" class="text-info"></span>


    <label>Hizmet Açıklaması</label>
    <input type="text" asp-for="Description" class="form-control mb-2" />
    <span asp-validation-for="Description" class="text-info"></span>

    <button class="btn btn-rounded btn-primary">Hizmet Güncelle</button>
</form>

