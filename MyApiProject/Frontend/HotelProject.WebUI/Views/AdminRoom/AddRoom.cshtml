@model CreateRoomDto
@{
    ViewData["Title"] = "AddRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<form method="post">
    <label>Oda Numarası</label>
    <input type="text" asp-for="RoomNumber" class="form-control mb-2" />

    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control mb-2" />

    <label>Fiyat</label>
    <input type="text" asp-for="Price" class="form-control mb-2" />

    <label>Yatak Sayısı</label>
    <input type="text" asp-for="BedCount" class="form-control mb-2" />

    <label>Banyo Sayısı</label>
    <input type="text" asp-for="BathCount" class="form-control mb-2" />

    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control mb-2" />

    <label>Oda Resmi</label>
    <input type="text" asp-for="RoomCoverImage" class="form-control mb-2" />

    <button class="btn btn-rounded btn-primary">Oda Ekle</button>
</form>

