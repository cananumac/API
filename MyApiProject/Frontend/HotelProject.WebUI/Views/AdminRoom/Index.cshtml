@model List<ResultRoomDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.RoomNumber</td>
            <td>@item.Title</td>
            <td><a asp-controller="AdminRoom" asp-action="DeleteRoom" asp-route-id="@item.RoomId" class="btn btn-rounded btn-danger">Sil</a></td>
            <td><a asp-controller="AdminRoom" asp-action="UpdateRoom" asp-route-id="@item.RoomId" class="btn btn-rounded btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a asp-controller="AdminRoom" asp-action="AddRoom" class="btn btn-rounded btn-info">Yeni Oda Girişi</a>


