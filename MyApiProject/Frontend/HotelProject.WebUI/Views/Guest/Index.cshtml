@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td><a asp-controller="Guest" asp-action="DeleteGuest" asp-route-id="@item.GuestID" class="btn btn-rounded btn-danger">Sil</a></td>
            <td><a asp-controller="Guest" asp-action="UpdateGuest" asp-route-id="@item.GuestID" class="btn btn-rounded btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a asp-controller="Guest" asp-action="AddGuest" class="btn btn-rounded btn-info">Yeni Misafir Girişi</a>


