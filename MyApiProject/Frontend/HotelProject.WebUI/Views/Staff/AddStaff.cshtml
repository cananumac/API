@model AddStaffViewModel
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Personel Adı</label>
    <input type="text" asp-for="Name" class="form-control mb-2" />
    
    <label>Personel Unvan</label>
    <input type="text" asp-for="Title" class="form-control mb-2" />
   
    <label>Sosyal Medya 1</label>
    <input type="text" asp-for="SocialMedia1" class="form-control mb-2" />
    
    <label>Sosyal Medya 2</label>
    <input type="text" asp-for="SocialMedia2" class="form-control mb-2" />
    
    <label>Sosyal Medya 3</label>
    <input type="text" asp-for="SocialMedia3" class="form-control mb-2" />

    <button class="btn btn-rounded btn-primary">Personel Ekle</button>
</form>
