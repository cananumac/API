@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Unvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detay</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.StaffId</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a asp-controller="Staff" asp-action="DeleteStaff" asp-route-id="@item.StaffId"  class="btn btn-rounded btn-danger">Sil</a></td>
            <td><a asp-controller="Staff" asp-action="UpdateStaff" asp-route-id="@item.StaffId"  class="btn btn-rounded btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-rounded btn-warning">Detay</a></td>
        </tr>
    }

</table>
<a asp-controller="Staff" asp-action="AddStaff" class="btn btn-rounded btn-info">Yeni Personel Girişi</a>
